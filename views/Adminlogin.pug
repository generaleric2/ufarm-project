// LOGIN FORM STARTS
.container(style='margin-top: 40px;')
  h1 ADMIN LOGIN
  .row
    .col-md-5.col-sm-6.col-xs-6
      .card(style='background: transparent;')
        form#regForm(action='#' name='login' onsubmit='return Validate(event);' method='POST')
          .mb-3
            label.form-label(for='admin')
              strong ADMIN ID
            input.form-control(type='text' name='admin')
            small#adminerr
          .mb-3
            label.form-label(for='password')
              strong PASSWORD
            input.form-control(type='password' name='password')
            small#passworderr
          button.btn.btn-success(type='submit') LOG IN
  p
    | Dont have an account yet?
    a(href='#') Register
    | Here
// login form ends
