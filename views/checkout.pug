doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  meta(name='description' content='')
  meta(name='author' content='Mark Otto, Jacob Thornton, and Bootstrap contributors')
  meta(name='generator' content='Hugo 0.84.0')
  title Checkout example &middot; Bootstrap v5.0
  link(rel='canonical' href='https://getbootstrap.com/docs/5.0/examples/checkout/')
  link(href='custom.css' rel='stylesheet')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD' crossorigin='anonymous')
  // Bootstrap core CSS
  link(href='../assets/dist/css/bootstrap.min.css' rel='stylesheet')
  style.
    .bd-placeholder-img {
    font-size: 1.125rem;
    text-anchor: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    user-select: none;
    }
    @media (min-width: 768px) {
    .bd-placeholder-img-lg {
    font-size: 3.5rem;
    }
    }
  // Custom styles for this template
  link(href='form-validation.css' rel='stylesheet')
.container
  main
    .py-5.text-center
      img(src='/images/icon1.jpg' style='height: 70px;')
      span UFARM
      h2 Checkout form
    .row.g-5
      if cartItems.length > 0
        table.table.table-striped.mt-3
          thead
            tr
              th Product Name
              th Price
              th Quantity
              th Total
          tbody
            each cartItem in cartItems
              tr
                td= cartItem.product.name
                td $#{cartItem.product.price.toFixed(2)}
                td= cartItem.quantity
                td $#{(cartItem.product.price * cartItem.quantity).toFixed(2)}
        h4 Total: $#{(cartItems.reduce((total, item) => total + item.product.price * item.quantity, 0)).toFixed(2)}
      .col-md-7.col-lg-8
        h4.mb-3 Billing address
        form.needs-validation(novalidate='')
          .row.g-3
            .col-sm-6
              label.form-label(for='firstName') First name
              input#firstName.form-control(type='text' placeholder='' value='' required='')
              .invalid-feedback
                | Valid first name is required.
            .col-sm-6
              label.form-label(for='lastName') Last name
              input#lastName.form-control(type='text' placeholder='' value='' required='')
              .invalid-feedback
                | Valid last name is required.
            .col-12
              label.form-label(for='username') Username
              .input-group.has-validation
                span.input-group-text @
                input#username.form-control(type='text' placeholder='Username' required='')
                .invalid-feedback
                  | Your username is required.
            .col-12
              label.form-label(for='email')
                | Email 
                span.text-muted (Optional)
              input#email.form-control(type='email' placeholder='you@example.com')
              .invalid-feedback
                | Please enter a valid email address for shipping updates.
            .col-12
              label.form-label(for='address2') Address 
              input#address2.form-control(type='text' placeholder='Apartment or suite')
              .invalid-feedback
                | Please enter your shipping address.
            .col-md-5
              label.form-label(for='country') Country
              select#country.form-select(required='')
                option(value='') Uganda
                option Kenya
              .invalid-feedback
                | Please select a valid country.
            .col-md-3
              label.form-label(for='zip') Zip
              input#zip.form-control(type='text' placeholder='' optional='')
          hr.my-4
          .form-check
            input#same-address.form-check-input(type='checkbox')
            label.form-check-label(for='same-address') Shipping address is the same as my billing address
          .form-check
            input#save-info.form-check-input(type='checkbox')
            label.form-check-label(for='save-info') Save this information for next time
          hr.my-4
          h4.mb-3 Payment
          .my-3
            .form-check
              input#credit.form-check-input(name='paymentMethod' type='radio' checked='' required='')
              label.form-check-label(for='credit') Credit card
            .form-check
              input#debit.form-check-input(name='paymentMethod' type='radio' required='')
              label.form-check-label(for='debit') Debit card
            .form-check
              input#paypal.form-check-input(name='paymentMethod' type='radio' required='')
              label.form-check-label(for='paypal') PayPal
            .form-check
              input#paypal.form-check-input(name='paymentMethod' type='radio' required='')
              label.form-check-label(for='cash') Cash on Delivery
          .row.gy-3
            .col-md-6
              label.form-label(for='cc-name') Name on card
              input#cc-name.form-control(type='text' placeholder='' required='')
              small.text-muted Full name as displayed on card
              .invalid-feedback
                | Name on card is required
            .col-md-6
              label.form-label(for='cc-number') Credit card number
              input#cc-number.form-control(type='text' placeholder='' required='')
              .invalid-feedback
                | Credit card number is required
            .col-md-3
              label.form-label(for='cc-expiration') Expiration
              input#cc-expiration.form-control(type='text' placeholder='' required='')
              .invalid-feedback
                | Expiration date required
            .col-md-3
              label.form-label(for='cc-cvv') CVV
              input#cc-cvv.form-control(type='text' placeholder='' required='')
              .invalid-feedback
                | Security code required
          hr.my-4
          button.w-100.btn.btn-primary.btn-lg(type='submit') Continue to checkout
  footer.my-5.pt-5.text-muted.text-center.text-small
    p.mb-1 &copy; 2023 UFARM
    ul.list-inline
      li.list-inline-item
        a(href='#') Privacy
      li.list-inline-item
        a(href='#') Terms
      li.list-inline-item
        a(href='#') Support
script(src='../assets/dist/js/bootstrap.bundle.min.js')
script(src='/js/form-validation.js')
