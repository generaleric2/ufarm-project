doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  // Bootstrap CSS
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  link(href='/css/style.css' rel='stylesheet')
  title Register
.container(style='margin-left: 10px;')
  a.navbar-brand(href='/landingpage.html')
    img(src='/images/icon1.jpg' style='height: 40px;')
    span UFARM
.card
  .card-header
    .card-title
      p PLEASE ENTER YOUR DETAILS
      .card-body
        form#regForm.row.g-3(action='/register' name='register' onsubmit='return Validate();' method='POST')
          .col-md-6
            label.form-label(for='firstName') First Name
            input#firstName.form-control(type='text')
            small#firstnameerr(style='color: red; font-weight: bold; font-size: small;')
          .col-md-6
            label.form-label(for='lastName') Last Name
            input#lastName.form-control(type='lastName')
            small#lastnameerr(style='color: red; font-weight: bold; font-size: small;')
          .col-6
            label.form-label(for='email') Email
            input.form-control(type='email' name='email' placeholder='name@example.com')
            small#emailerr(style='color: red; font-weight: bold; font-size: small;')
          .col-6
            label.form-label(for='phonenumber') Phone Number
            input.form-control(type='tel' name='phonenumber' placeholder='+256')
            small#phonenumbererr(style='color: red; font-weight: bold; font-size: small;')
          .col-md-6
            label.form-label(for='dateb') Date Of Birth
            input.form-control(type='date' name='dateb')
            small#doberr(style='color: red; font-weight: bold; font-size: small;')
          .col-md-4
            label.form-label(for='gender') Gender
            select.form-select(name='gender')
              option(selected='')
              option Male
              option Female
            small#gendererr(style='color: red; font-weight: bold; font-size: small;')
          .col-md-2
            label.form-label(for='ward') Ward
            input.form-control(type='text' name='ward')
            small#warderr
          .col-6
            label.form-label(for='password') Create a Password
            input.form-control(type='password' name='password' placeholder='Atleast 6 characters')
            small#passworderr(style='color: red; font-weight: bold; font-size: small;')
          .col-6
            label.form-label(for='cfrmpassword') Confirm Passwod
            input.form-control(type='password' name='cfrmpassword')
            small#cfrmpwderr(style='color: red; font-weight: bold; font-size: small;')
          //
            <div class="col-12">
            <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
            Check me out
            </label>
            </div>
            </div>
          .col-12
            a(href='/user/UrbanFarmer/loginuf.html')
              button.btn.btn-primary(type='submit') REGISTER
